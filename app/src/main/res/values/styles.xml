<resources>
    <!-- Base application theme for Android TV -->
    <style name="Theme.TVChannels" parent="@style/Theme.Leanback">
        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!-- Fullscreen theme for video player -->
    <style name="Theme.TVChannels.Fullscreen" parent="@style/Theme.TVChannels">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <!-- Channel card style -->
    <style name="ChannelCardStyle" parent="Widget.Leanback.Card">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <!-- Category card style -->
    <style name="CategoryCardStyle" parent="Widget.Leanback.Card">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">6dp</item>
    </style>

    <!-- Text style for channel names -->
    <style name="ChannelNameTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Text style for category names -->
    <style name="CategoryNameTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources> 